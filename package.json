{
    "main": "source/server.ts",
    "scripts": {
        "dev": "nodemon source/server.ts",
        "build": "rm -rf build/ && tsc",
        "test": "jest"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/__tests__/*.+(ts|tsx|js)"
        ]
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "mongoose": "^5.12.15",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.2",
        "@types/node": "^15.12.5",
        "@types/supertest": "^2.0.11",
        "jest": "^27.0.6",
        "nodemon": "^2.0.7",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    }
}
